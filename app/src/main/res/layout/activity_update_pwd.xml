<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.UpdatePwdActivity">
    <include
        android:id="@+id/titlebar"
        layout="@layout/main_titlebar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:paddingLeft="@dimen/height17"
        android:paddingRight="@dimen/height18"
        android:layout_marginTop="@dimen/height10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="原密码："
            android:textColor="@color/common_dark"
            android:textSize="@dimen/size15" />
        <EditText
            android:id="@+id/oldPwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/update_psd_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:paddingLeft="@dimen/height17"
        android:paddingRight="@dimen/height18"
        android:layout_marginTop="@dimen/height1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="新密码："
            android:textColor="@color/common_dark"
            android:textSize="@dimen/size15" />

        <EditText
            android:id="@+id/newPwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:paddingLeft="@dimen/height17"
        android:paddingRight="@dimen/height18"
        android:layout_marginTop="@dimen/height1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="确认新密码"
            android:textColor="@color/common_dark"
            android:textSize="@dimen/size15" />
        <EditText
            android:id="@+id/confirmPwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"/>

    </LinearLayout>
</LinearLayout>