<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height250"
        android:scaleType="centerCrop"
        android:background="@drawable/boy" />


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height200"
            android:background="@drawable/home_bg11" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height200">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dynamic_iv"
                    android:layout_width="@dimen/height71"
                    android:layout_height="@dimen/height80"
                    android:layout_marginTop="@dimen/height24"
                    android:src="@drawable/home_dt" />

                <TextView
                    android:layout_width="@dimen/height71"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height5"
                    android:gravity="center"
                    android:textSize="@dimen/size13"
                    android:text="动态" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/distribution_iv"
                    android:layout_width="@dimen/height95"
                    android:layout_height="@dimen/height106"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/home_bfp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/height10"
                    android:textSize="@dimen/size15"
                    android:gravity="center"
                    android:text="包分配" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height24" />

                <ImageView
                    android:id="@+id/recent_visitors_iv"
                    android:layout_width="@dimen/height71"
                    android:layout_height="@dimen/height80"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/height5"
                    android:src="@drawable/home_zjfk" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/height10"
                    android:gravity="center"
                    android:textSize="@dimen/size13"
                    android:text="最近访客" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/square_iv"
                    android:layout_width="@dimen/height71"
                    android:layout_height="@dimen/height80"
                    android:layout_marginTop="@dimen/height24"
                    android:src="@drawable/home_gc" />

                <TextView
                    android:layout_width="@dimen/height71"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height5"
                    android:gravity="center"
                    android:textSize="@dimen/size13"
                    android:text="广场" />
            </LinearLayout>
        </LinearLayout>
    <ImageView
        android:id="@+id/tmd_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height235"
        android:alpha="0.28"
        android:background="@drawable/home_bg6" />
    <LinearLayout
        android:id="@+id/tab_layout_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height200"
        android:gravity="center"
        android:orientation="vertical">

        <com.fangyizhan.intersection.views.CircleImageView
            android:id="@+id/head_picture_iv"
            android:layout_width="@dimen/height60"
            android:layout_height="@dimen/height60"
            android:src="@drawable/people" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height19"
            android:textColor="@color/white"
            android:textSize="@dimen/size14"
            android:text="昵称*" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/height8"
            android:textSize="@dimen/size11"
            android:text="不能自渡，何以渡人*" />
    </LinearLayout>
    <ImageView
        android:id="@+id/setting_iv"
        android:layout_width="@dimen/height21"
        android:layout_height="@dimen/height22"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/height11"
        android:layout_marginTop="@dimen/height10"
        android:src="@drawable/home_setting"/>
</FrameLayout>