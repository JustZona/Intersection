<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

    <TextView
        android:id="@+id/actoin_sheet_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_sheet_item_height"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sel_list_item_white_bg"
        android:gravity="center"
        android:textColor="@color/button_cancel"
        android:textSize="@dimen/text_size_16"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/actoin_sheet_cancel"
        android:background="@color/common_bg">

        <ListView
            android:id="@android:id/list"
            style="@style/MyWidget.ListView"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>