<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_height_small"
    android:paddingLeft="@dimen/common_horizon_margin"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/condition_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/popup_mul_condition_textcolor"
        android:textSize="@dimen/size13"
        tools:text="西餐厅"
        android:layout_weight="1"

        />
    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/condition_selected"
        android:visibility="gone"
        />
</LinearLayout>