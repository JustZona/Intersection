<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_half_transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/blank1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.48"></LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.52"
            android:orientation="vertical">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="7dp"
                android:layout_marginLeft="142dp"
                android:src="@drawable/mine_sanjiao"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/condition_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_corners_white"
                android:paddingLeft="@dimen/common_horizon_margin"
                android:paddingRight="@dimen/common_horizon_margin"
                android:gravity="center"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>