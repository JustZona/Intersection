<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_dark">
    <View
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/font_gray_deep"
        android:background="#f4f4f4"
        android:gravity="center"
        android:text="选择"
        android:visibility="gone"/>
    <View
        android:id="@+id/title_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/common_divider_horizontal"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:minHeight="250dp"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/one_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.12"
            android:background="#f3f3f3"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/two_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/common_divider_color"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/three_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>